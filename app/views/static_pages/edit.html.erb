<% provide(:title, 'Edit page')%>
<% content_for :head do %>
<h1>Edit page "<%= @static_page.title %>"</h1>
<%end%>

<% content_for :cont do %>

<%= form_for(@static_page, :url => {:action => 'update', :id => @static_page.id}) do |f| %>
   <p>
    Title: <%= f.text_field 'title', :placeholder => "between 1 and 15 characters" %>
  </p>
  <p>
    Description: <%= f.text_field 'description', :placeholder => "between 5 and 50 characters" %>
  </p>
  <p>
    <%= f.submit "Edit", class: "btn btn-primary" %>
  </p>
<% end %>

<%= link_to 'Back', :action => nil %>
<%end%>