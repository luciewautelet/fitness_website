<% provide(:title, "message list") %>
<% content_for :head do%>
<h1>
  <% if @page %>
  <% @page[:title]%>
  <%end%>
</h1>
<%end%>

<% content_for :desc do %>
  <%if @page%>
  <% @page[:description] %>
  <%end%>
<%end%>

<% content_for :img do %>
  <% if @img %>
  <%= carousel_for(@img)%>
  <%end%>
<%end%>

<%content_for :cont do %>
<table class="table">
  <tr>
  </tr>

<% @contact_messages.each do |m| %>
  <tr>
    <td>From: <%= link_to m.name, :action => 'show', :id => m.id %></td>
    
    <% if website_admin? %>
        <td> <%= link_to 'Delete', m, :confirm => 'Are you sure?', :method => :delete %> </td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if logged_in? %>
    <%= link_to 'Add a message', :action => 'new' %>
<% end %>
<%end%>