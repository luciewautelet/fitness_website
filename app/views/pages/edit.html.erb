<% provide(:title, 'Edit page')%>
<% content_for :head do %>
<h1>Edit page "<%= @page.title %>"</h1>
<%end%>

<% content_for :cont do %>

<%= form_for(@page, :url => {:action => 'update', :id => @page.id}) do |f| %>
   <p>
    Title: <%= f.text_field 'title' , :placeholder => "between 2 and 15 characters"%>
  </p>
  <p>
    Description: <%= f.text_field 'description', :placeholder => "between 5 and 30 characters" %>
  </p>
  <p>
    Content: <%= f.text_area 'content' , :placeholder => "minimum 5 characters long" %>
  </p>
  <p>
    <%= f.submit "Edit", class: "btn btn-primary" %>
  </p>
<% end %>

<%= link_to 'Back', :action => nil %>
<%end%>