<% provide(:title, "classes") %>
<% content_for :head do %>
<h1>Listing classes</h1>
<%end%>

<% content_for :cont do %>
<table class="table_product">
  <tr>
    <th>Type</th>
    <th>Description</th>
    <th>Time</th>
    <%if logged_in? %>
    <th>Edit</th>
    <th>Delete</th>
    <%end%>
  </tr>

<% @classes.each do |c| %>
  <tr>
    <td><%= link_to c.ctype, :action => 'show', :id => c.id %></td>
    <td><%=c.description%></td>
    <td><%=c.date.to_time.strftime("%A, %l:%M %p")%></td>
    <% if logged_in? %>
        <td> <%= link_to 'Edit', :action => 'edit', :id => c.id %></td>
        <td><%= link_to 'Delete', c, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if logged_in? %>
    <%= link_to 'Add a classe', :action => 'new' %>
<% end %>
<%end%>