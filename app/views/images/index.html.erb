<% provide(:title, 'images') %> 
<% content_for :head do%>
<h1>images</h1>
<%end%>
<% content_for :desc do %>
<p>Below the list of all the images available in our fitness center</p>
<%end%>
<% content_for :cont do %>
<table class="table">
  <thead>
  <tr>
    <th>Gallery name</th>
    <th>Filename</th>
    <th>alt_text</th>
    <th>Caption</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  </thead>

<% @images.each do |i| %>
  <tbody>
  <tr>
    <td><%= i.gallery %></td>
    <td><%= i.filename %></td>
    <td><%= i.alt_text%></td>
    <td><%= i.caption%></td>
    <td> <%= link_to 'Edit', :action => 'edit', :id => i.id %></td>
    <td><%= link_to 'Delete', i, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  </tbody>
<% end %>
</table>

<br />
    <%= link_to 'Add a image', :action => 'new' %>
<%end%>